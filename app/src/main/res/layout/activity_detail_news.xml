<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNews">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:scrollbarAlwaysDrawVerticalTrack="true">



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
            style="@android:style/Widget.ProgressBar.Small" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="8dp"
                app:srcCompat="@drawable/group_54037" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adViewDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:adSize="LARGE_BANNER"
                    app:adUnitId="ca-app-pub-3940256099942544/6300978111" />
            </LinearLayout>


            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="match_parent"
                android:layout_height="296dp"
                tools:srcCompat="@tools:sample/avatars" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="7">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="@font/plus_jakarta_sans_extralight"
                    android:includeFontPadding="false"
                    android:text="Title haber"
                    android:textSize="17sp"
                    android:textStyle="bold" />



                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/share" />
            </LinearLayout>



            <TextView
                android:id="@+id/context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_extralight"
                android:padding="8dp"
                android:text="Content haber"
                android:textColor="#151515"
                android:textSize="15sp" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adViewMREDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:adSize="LARGE_BANNER"
                    app:adUnitId="ca-app-pub-3940256099942544/6300978111" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_extralight"
                android:padding="8dp"
                android:text="İlgili içerik"
                android:textSize="17sp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>